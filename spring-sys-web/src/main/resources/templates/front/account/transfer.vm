#@html()
<link rel="stylesheet" type="text/css" href="/css/backstage/bootstrap-fileupload.min.css"/>
<link rel="stylesheet" href="/summernote/summernote.css">
    #@wrapper()
        #@panel()
            #@panelHeader({"title":"转账", "perm": "system:member:view", "isBack": false, "href": "front/account/list"})
                #btn({"btnName":"提交", "icon":"fa-save", "style":"primary",  "attr":{"data-button": "save", "data-form-id": "form_insert"}})
            #end
            #@panelBody()
                #@form("form_insert" true "post" "front/account/transfer")

                    #formInput({"name": "转账到会员ID"} {"name": "memberId", "value":"","id": "memberId","required": "required"})
                    <div class="form-group" >
                        <label class="col-sm-2 control-label">转账类型：</label>
                        <div class="col-sm-2">
                            #selectBS($!dict.getDictList("transType"), ["transType", "", "value", "label"], false)
                        </div>
                    </div>
                    <div class="form-group" >
                        <div name="div1" >
                            <label class="col-sm-2 control-label">转账金额（元）：</label>

                        </div>
                        <div name="div2" style="display: none">
                            <label class="col-sm-2 control-label">转账金蛋数：</label>
                        </div>
                        <div class="col-sm-2">
                            <input  class="form-control" id="amount" name="amount" width="100%">
                        </div>
                    </div>

                <div class="form-group" >
                    <label class="col-sm-2 control-label">密码：</label>
                    <div class="col-sm-2">
                        <input type="password" placeholder="请输入密码" class="form-control form-underlined" id="password" name="password"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">可转账金额：</label>
                    <div class="col-sm-2" style="margin-top: 5px" name="div1">
                        $!{member.accountMoney}
                    </div>
                    <div class="col-sm-2" style="margin-top: 5px; display: none" name="div2" >
                        $!{member.score}
                    </div>
                </div>
                #end
            #end
        #end
    #end
    #@script()

        #scriptSrc("/summernote/summernote.js")
        #scriptSrc("/summernote/lang/summernote-zh-CN.js")
        #scriptSrc("/js/backstage/bootstrap-fileupload.min.js")


    <script>

        $(document).ready(function() {

            $("#transType").change(function(){
                if("1"==$("#transType").val()){
                    //现金
                    $("div[name='div1']").show();
                    $("div[name='div2']").hide();
                }
                if("2"==$("#transType").val()){
                    //现金
                    $("div[name='div1']").hide();
                    $("div[name='div2']").show();
                }
            });

            $('.summernote').summernote({
//                toolbar: [
//                    ['style', ['bold', 'italic', 'underline']],
//                    ['fontsize', ['fontsize']],
//                    ['para', ['paragraph']],
//                    ['height', ['height']]
//                ],
                height: 400,
                tabsize: 2,
                lang: 'zh-CN',
                callbacks: {
                    onImageUpload: function(files) {
                        //上传图片到服务器，使用了formData对象，至于兼容性...据说对低版本IE不太友好
                        var formData = new FormData();
                        formData.append('file',files[0]);
                        $.ajax({
                            url : '$!{ctx}/notice/upload',//后台文件上传接口
                            type : 'POST',
                            data : formData,
                            processData : false,
                            contentType : false,
                            success : function(data) {
//                            alert(data);
                                $('#summernote').summernote('insertImage',data,'img');
                            }
                        });
                    }
                }

            });


        });

    </script>
        #@jsValidate("form_insert")
        #end
    #end
#end