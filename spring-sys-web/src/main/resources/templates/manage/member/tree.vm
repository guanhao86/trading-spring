<!DOCTYPE html>
#@html()
    #@wrapper()
        #@panel()
            #@panelHeader({"title":"网体结构 搜索", "perm": "", "isBack": false, "href": ""})
            <span class="tools pull-right">
                <button class="btn btn-sm btn-primary tooltips" type="button" onclick="getTree()">
                    <i class="fa fa-search"></i> 查询
                </button>
            </span>
            #end
            #@panelBody()
                #@divColSmNum(3)
                    #formInput({"name": "会员编号", "length": "4,8", "asterisk": false} {"name": "memberId", "id": "memberId"})
                #end
            #end
        #end
        #@panel()
             #@panelBody()
                 <div id="container" style="height: 500px; overflow: auto"></div>
            #end
        #end
    #end
    #@script()
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts-gl/dist/echarts-gl.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts-stat/dist/ecStat.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts/dist/extension/dataTool.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts/map/js/china.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts/map/js/world.js"></script>
    <script>



        function getTree() {
            var memberId = document.getElementById("memberId").value;
            if (memberId == "") {
                alert("请输入会员ID");
                return;
            }
            var dom = document.getElementById("container");
            var myChart = echarts.init(dom);
            var app = {};
            option = null;
            myChart.showLoading();

            $.get('/api/member/getMemberTree/'+memberId, function (data) {
                console.log("data", data)
                if (data.data == null) {
                    alert("未查询到会员信息");
                    myChart.hideLoading();
                    return;
                }
                myChart.hideLoading();

                echarts.util.each(data.children, function (datum, index) {
                    index % 2 === 0 && (datum.collapsed = true);
                });

                myChart.setOption(option = {
                    tooltip: {
                        trigger: 'item',
                        triggerOn: 'mousemove'
                    },

                    series: [

                        {
                            type: 'tree',

                            data: [data.data],

                            top: '1%',
                            left: '15%',
                            bottom: '5%',
                            right: '20%',

                            symbolSize: 7,

                            label: {
                                normal: {
                                    position: 'left',
                                    verticalAlign: 'top',
                                    align: 'right',
                                    fontSize: 9
                                }
                            },

                            leaves: {
                                label: {
                                    normal: {
                                        position: 'right',
                                        verticalAlign: 'middle',
                                        align: 'left'
                                    }
                                }
                            },

                            expandAndCollapse: true,
                            animationDuration: 550,
                            animationDurationUpdate: 750
                        }
                    ]
                });

                myChart.on('click', function (params) {
                    console.log(params);
                    var container = document.getElementById('container');
                    var allNode=0;
                    var nodes=myChart._chartsViews[0]._data._graphicEls;
                    for(var i=0,count =nodes.length;i<count;i++){
                        var node=nodes[i];
                        if(node===undefined)
                            continue;
                        allNode++;
                    }
                    var height=window.innerHeight;
                    var currentHeight=35*allNode;
                    var newWidth=Math.max(currentHeight,height);
                    container.style.width = window.innerWidth + 'px';
                    container.style.height = newWidth + 'px';
                    myChart.resize();
                });
            });;
            if (option && typeof option === "object") {
                myChart.setOption(option, true);
            }

        }


    </script>
        #jsCalculate()
        #@jsValidate("form_insert")

        #end
    #end
#end